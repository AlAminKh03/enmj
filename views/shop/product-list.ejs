<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
<% if (prods.length > 0) { %>
    <main>
       
        <h1>My Products</h1>
        <p>List of all the products...</p>
        <% for (product of prods) { %>
        <div class="grid">
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%=product.title%></h1>
                </header>
                <div class="card__image">
                    <img src="/<%=product.ImgUrl%>" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$<%=product.price%></h2>
                    <p class="product__description"><%=product.description%></p>
                </div>
                <div class="card__actions">
                    <a class="btn" href="/product/<%=product._id %>">Details</a>
                    <% if (isAuthenticated) { %>
                        <%-include('../includes/add-tocart.ejs') %>
                    <% } %>
                </div>
            </article>
        </div>
    </main>
    <% } %>
    <%-include('../includes/add-to-cart-pagination.ejs',{currentPage,previousPage,hasPreviousPage,currentPage,hasNextPage,nextPage,lastPage}) %>
    <% } else { %>
        <h1> No products available</h1>
        <% } %>
        <%- include('../includes/end.ejs') %>
